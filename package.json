{
  "name": "hicode-vue",
  "version": "0.0.0",
  "private": true,
  "type": "module",
  "engines": {
    "node": "^20.19.0 || >=22.12.0"
  },
  "scripts": {
    "serve:chat": "vite --mode chat",
    "serve:settings": "vite --mode settings",
    "build:chat": "vite build --mode chat",
    "build:settings": "vite build --mode settings",
    "build:fast": "pnpm run build:chat && pnpm run build:settings",
    "build:copy": "pnpm run build:fast && node ./scripts/package-migrate.mjs",
    "copy": "node ./scripts/package-migrate.mjs",
    "build-only": "vite build",
    "preview": "vite preview",
    "preview:chat": "vite preview --mode chat",
    "preview:settings": "vite preview --mode settings",
    "type-check": "vue-tsc --build",
    "lint": "run-s lint:*",
    "lint:oxlint": "oxlint . --fix",
    "lint:eslint": "eslint . --fix --cache",
    "format": "prettier --write --experimental-cli src/"
  },
  "dependencies": {
    "@element-plus/icons-vue": "^2.3.2",
    "axios": "^1.13.2",
    "element-plus": "^2.13.0",
    "highlight.js": "^11.11.1",
    "marked": "^17.0.1",
    "marked-highlight": "^2.2.3",
    "vue": "^3.5.26"
  },
  "devDependencies": {
    "@tsconfig/node24": "^24.0.3",
    "@types/marked": "^6.0.0",
    "@types/node": "^24.10.4",
    "@vitejs/plugin-vue": "^6.0.3",
    "@vitejs/plugin-vue-jsx": "^5.1.3",
    "@vue/eslint-config-prettier": "^10.2.0",
    "@vue/eslint-config-typescript": "^14.6.0",
    "@vue/tsconfig": "^0.8.1",
    "chalk": "^5.3.0",
    "eslint": "^9.39.2",
    "eslint-plugin-oxlint": "~1.35.0",
    "eslint-plugin-vue": "~10.6.2",
    "fs-extra": "^11.2.0",
    "jiti": "^2.6.1",
    "npm-run-all2": "^8.0.4",
    "oxlint": "~1.35.0",
    "prettier": "3.7.4",
    "prompts": "^2.4.2",
    "sass": "^1.97.1",
    "sass-loader": "^16.0.6",
    "typescript": "~5.9.3",
    "vite": "^7.3.0",
    "vite-plugin-vue-devtools": "^8.0.5",
    "vue-tsc": "^3.2.1"
  }
}
